FROM golang:1.16-alpine AS build
WORKDIR /illuminatingdeposits
COPY go.mod .
RUN go mod download
COPY . .
WORKDIR /illuminatingdeposits/cmd/consumer
RUN go build

FROM alpine
RUN apk update
RUN apk add bash
WORKDIR /cmd
COPY --from=build /illuminatingdeposits/cmd/consumer/consumer .
CMD ["./consumer"]